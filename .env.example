# ============================================================
# SUPABASE 
# ============================================================
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================
# DATABASE (Supabase PostgreSQL via Prisma)
# ============================================================
# Connection pooling (transaction mode — pour Prisma via PgBouncer)
DATABASE_URL=postgresql://postgres.xxxxx:[PASSWORD]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres?pgbouncer=true

# Direct connection (pour les migrations Prisma)
DIRECT_URL=postgresql://postgres.xxxxx:[PASSWORD]@aws-0-eu-central-1.pooler.supabase.com:5432/postgres

# ============================================================
# AUTH
# ============================================================
# Secret pour les sessions SvelteKit (openssl rand -base64 32)
AUTH_SECRET=your-32-char-secret-here

# Google OAuth (Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================================
# APP
# ============================================================
PUBLIC_APP_URL=http://localhost:5173
PUBLIC_APP_NAME=ShrimpShop
PUBLIC_APP_DESCRIPTION=Crevettes d'aquarium de qualité pour particuliers et professionnels

# ============================================================
# SUPABASE STORAGE
# ============================================================
SUPABASE_STORAGE_BUCKET_ARTICLES=articles
SUPABASE_STORAGE_BUCKET_GALLERY=gallery

# ============================================================
# OPTIONNEL : Monitoring / Analytics
# ============================================================
